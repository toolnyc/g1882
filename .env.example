# Database connection string
DATABASE_URI=mongodb://127.0.0.1/your-database-name

# Or use a PG connection string
#DATABASE_URI=postgresql://127.0.0.1:5432/your-database-name

# Used to encrypt JWT tokens
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Used to configure CORS, format links and more. No trailing slash
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE

# Used to validate preview requests
PREVIEW_SECRET=YOUR_SECRET_HERE

# Vercel Blob storage token
BLOB_READ_WRITE_TOKEN=your_blob_token_here

# Resend API Key for newsletter subscriptions
RESEND_API_KEY=your_resend_api_key_here

# Optional: Resend Audience ID (create an audience in Resend dashboard and use its ID)
# RESEND_AUDIENCE_ID=your_audience_id_here

# From email address for confirmation emails (must be a verified domain in Resend)
RESEND_FROM_EMAIL=newsletter@yourdomain.com

# Newsletter gate modal - set to 'true' to enable on Vercel preview
NEXT_PUBLIC_ENABLE_NEWSLETTER_GATE=false

# Admin preview - allows authenticated admins to bypass newsletter gate and view full site
NEXT_PUBLIC_ENABLE_ADMIN_PREVIEW=true
